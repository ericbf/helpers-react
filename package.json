{
	"name": "fast-ts-helpers",
	"version": "4.2.0",
	"private": true,
	"description": "A package containing some helpful functions, constants, types, and react hooks.",
	"license": "MIT",
	"repository": "github:ericmakesapps/fast-ts-helpers",
	"author": "Eric Ferreira <eric@ericmakesapps.com>",
	"scripts": {
		"build": "tsc",
		"check": "run-p lint format \"test -- --watch=false\"",
		"fix": "run-s fix:lint fix:format \"test -- --watch=false\"",
		"fix:format": "npm run format -- --write",
		"fix:lint": "npm run lint -- --fix",
		"format": "prettier -c --ignore-path .gitignore \"**/?*.@(js|ts|jsx|tsx|json|md|html|css|scss)\"",
		"lint": "eslint src --ext .ts,.tsx --max-warnings 0",
		"postbuild": "node scripts/copy-for-publish.js",
		"prebuild": "rimraf lib/*",
		"publish": "run-s check build && cd lib && npm publish",
		"test": "jest --coverage --watch",
		"version": "npm --no-git-tag-version version"
	},
	"peerDependencies": {
		"copy-to-clipboard": "^3.3.3",
		"fast-json-stable-stringify": "^2.1.0",
		"mutation-observer": "^1.0.3",
		"react": ">= 16.8",
		"resize-observer-polyfill": "^1.5.1",
		"tailwind-merge": "^1.8.1"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^5.17.0",
		"@testing-library/react": "^13.4.0",
		"@trivago/prettier-plugin-sort-imports": "^4.2.0",
		"@types/react": ">=18.2.22",
		"@types/react-router": "^5.1.20",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"app-root-path": "^3.1.0",
		"copy-to-clipboard": "^3.3.3",
		"eslint": "^8.49.0",
		"eslint-config-react-app": "^7.0.1",
		"eslint-plugin-jest": "^27.4.0",
		"fast-glob": "^3.3.1",
		"fast-json-stable-stringify": "^2.1.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"mutation-observer": "^1.0.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"prettier-plugin-package": "^1.3.1",
		"react": "^18.2.0",
		"resize-observer-polyfill": "^1.5.1",
		"rimraf": "^4.4.1",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2"
	}
}
