{
	"name": "fast-ts-helpers",
	"version": "1.0.1",
	"private": true,
	"description": "A package containing some helpful functions, constants, types, and react hooks.",
	"license": "MIT",
	"repository": "github:ericmakesapps/fast-ts-helpers",
	"author": "Eric Ferreira <eric@ericmakesapps.com>",
	"scripts": {
		"build": "tsc",
		"check": "run-p lint format test",
		"clean-lib": "rimraf lib/*",
		"fix": "run-s fix:lint fix:format test",
		"fix:format": "npm run format -- --write",
		"fix:lint": "npm run lint -- --fix",
		"format": "prettier -c --ignore-path .gitignore \"**/?*.@(js|ts|jsx|tsx|json|md|html|css|scss)\"",
		"lint": "eslint src --ext .ts,.tsx --max-warnings 0",
		"postbuild": "node scripts/copy-for-publish.js",
		"prebuild": "run-p clean-lib check",
		"publish": "npm run build && cd lib && npm publish",
		"test": "jest --coverage",
		"test:watch": "npm run test -- --watch",
		"version": "npm --no-git-tag-version version"
	},
	"peerDependencies": {
		"copy-to-clipboard": "^3.3.3",
		"json-stable-stringify": "^1.0.2",
		"mutation-observer": "^1.0.3",
		"react": ">= 16.8",
		"resize-observer-polyfill": "^1.5.1"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@types/json-stable-stringify": "^1.0.34",
		"@types/react": ">=18.0.26",
		"@types/react-router": "^5.1.20",
		"@typescript-eslint/eslint-plugin": "^5.48.1",
		"@typescript-eslint/parser": "^5.48.1",
		"app-root-path": "^3.1.0",
		"copy-to-clipboard": "^3.3.3",
		"eslint": "^8.31.0",
		"eslint-config-react-app": "^7.0.1",
		"eslint-plugin-jest": "^27.2.1",
		"fast-glob": "^3.2.12",
		"jest": "^29.3.1",
		"jest-environment-jsdom": "^29.3.1",
		"json-stable-stringify": "^1.0.2",
		"mutation-observer": "^1.0.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.3",
		"prettier-plugin-package": "^1.3.0",
		"react": "^18.2.0",
		"resize-observer-polyfill": "^1.5.1",
		"rimraf": "^4.0.4",
		"ts-jest": "^29.0.5",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4"
	}
}
