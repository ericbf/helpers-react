{
	"name": "fast-ts-helpers",
	"version": "0.2.2",
	"private": true,
	"description": "A package containing some helpful functions, constants, types, and react hooks.",
	"license": "MIT",
	"repository": "github:ericmakesapps/fast-ts-helpers",
	"author": "Eric Ferreira <eric@ericmakesapps.com>",
	"scripts": {
		"build": "tsc",
		"check": "run-p lint format",
		"clean-lib": "rimraf lib/*",
		"fix": "run-s fix:lint fix:format",
		"fix:format": "npm run format -- --write",
		"fix:lint": "npm run lint -- --fix",
		"format": "prettier -c --ignore-path .gitignore \"**/?*.@(js|ts|jsx|tsx|json|md|html|css|scss)\"",
		"generate-index": "bash scripts/generate-index.sh",
		"lint": "eslint src --ext .ts,.tsx --max-warnings 0",
		"postbuild": "node scripts/copy-for-publish.js",
		"prebuild": "run-p clean-lib generate-index check",
		"publish": "npm run build && cd lib && npm publish",
		"version": "npm --no-git-tag-version version"
	},
	"peerDependencies": {
		"react": "^18.2.0"
	},
	"dependencies": {
		"copy-to-clipboard": "^3.3.3",
		"json-stable-stringify": "^1.0.2",
		"mutation-observer": "^1.0.3",
		"resize-observer-polyfill": "^1.5.1"
	},
	"devDependencies": {
		"@types/json-stable-stringify": "^1.0.34",
		"@types/react": ">=18.0.25",
		"@types/react-router": "^5.1.19",
		"@typescript-eslint/eslint-plugin": "^5.43.0",
		"@typescript-eslint/parser": "^5.43.0",
		"app-root-path": "^3.1.0",
		"eslint": "^8.27.0",
		"eslint-config-react-app": "^7.0.1",
		"fast-glob": "^3.2.12",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.7.1",
		"prettier-plugin-package": "^1.3.0",
		"react": "^18.2.0",
		"rimraf": "^3.0.2",
		"typescript": "^4.9.3"
	}
}
